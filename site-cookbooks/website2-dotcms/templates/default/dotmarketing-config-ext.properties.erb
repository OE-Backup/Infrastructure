#  The name of your dotCMS cluster.  Each dotCMS cluster
##  should have a unique name (all servers in a cluster share the same name)
es.cluster.name=<%=@es_cluster_name%>

##  Network addr to bind to
#es.network.host=localhost
es.network.host=<%=@es_network_host%>
es.transport.tcp.port=<%=@es_transport_tcp_port%>

##  port to look for
es.network.port=<%=@es_network_port%>
es.http.enabled=<%=@es_http_enabled%>
es.http.port=<%=@es_http_port%>

##  Elasticsearch cluster config
es.discovery.zen.ping.multicast.enabled=<%=@es_discovery_zen_ping_multicast_enabled%>
es.discovery.zen.ping.timeout=<%=@es_discovery_zen_ping_timeout%>
es.discovery.zen.ping.unicast.hosts=<%=@es_discovery_zen_ping_unicast_hosts%>
es.discovery.zen.minimum_master_nodes=<%= node['dotcms']['es_discovery_zen_minimum_master_nodes'] %>
es.index.number_of_replicas=<%= node['dotcms']['es_index_number_of_replicas'] %>
es.gateway.recover_after_nodes=<%= node['dotcms']['es_gateway_recover_after_nodes'] %>
es.gateway.recover_after_time=<%= node['dotcms']['es_gateway_recover_after_time'] %>
es.gateway.expected_nodes=<%= node['dotcms']['es_gateway_expected_nodes'] %>
# Recommended by dotCMS support
es.index.number_of_shards=<%= node['dotcms']['es_index_number_of_shards'] %>

